# Environment Variables Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=8787
ENVIRONMENT=development
LOG_LEVEL=info

# Database
# For local development (SQLite - default)
SQLITE_DB_PATH=./db/local.db

# For Cloudflare D1 (production Workers)
# DB binding is configured in wrangler.jsonc

# Authentication
JWT_SECRET=your-secret-key-change-in-production-use-wrangler-secrets

# Sentry (optional)
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development
# SENTRY_RELEASE=1.0.0
